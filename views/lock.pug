extends layout

block content
  .page-header
    h3= title

  .page-header
    h4 Update lock

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label disabled', for='uid') UID
      .col-sm-8
        input.form-control(type='text', name='uid', id='uid' value=lock.uid disabled)
    .form-group
      label(class='col-sm-2 control-label', for='name') Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name' value=lock.name)
    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        textarea.form-control(name='description', id='description', rows='7')= lock.description
    .form-group
      label(class='col-sm-2 control-label') Assigned cards
      .col-sm-8
        for card in cards
          .checkbox
            a(href='/cards/' + card.uid)= card.name
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Update
